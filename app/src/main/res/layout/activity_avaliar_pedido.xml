<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AvaliarPedidoActivity"
    android:background="#000">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="Voltar"
        android:layout_marginLeft="20dp"
        android:background="#000"
        android:src="@drawable/icone_voltar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:src="@drawable/imagem_user"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Fulano de Tal"
        android:textColor="#343F4B"
        android:textSize="30sp"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="#343F4B"
        android:padding="8dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como foi o serviço?"
                android:textColor="#EAEAEA"
                android:textSize="25sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/imagem_estrelasemfundo"
                    android:background="#343F4B"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#343F4B"
                    android:src="@drawable/imagem_estrelasemfundo"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#343F4B"
                    android:src="@drawable/imagem_estrelasemfundo"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#343F4B"
                    android:src="@drawable/imagem_estrelasemfundo"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#343F4B"
                    android:src="@drawable/imagem_estrelasemfundo"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:padding="8dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deixe um comentário"
                android:textColor="#1F2D3D"
                android:textSize="22sp"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

        </LinearLayout>
    </FrameLayout>
    <Button
        android:id="@+id/btnDenunciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#969FAA"
        android:text="  Denunciar"
        android:textSize="21sp"
        android:padding="10dp"
        android:textColor="#9A2022"
        android:drawableLeft="@drawable/imagem_perigo"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFinalizarAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Avaliar"
        android:layout_gravity="end"
        android:layout_marginTop="90dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/icone_seta_continuar"
        />

</LinearLayout>